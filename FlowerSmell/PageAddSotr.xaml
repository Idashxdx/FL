<Page x:Class="FlowerSmell.PageAddSotr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlowerSmell"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAddSotr">

    <Grid Margin="50 0 0 0 ">
        <StackPanel Width="400"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="ФИО:"  Style="{StaticResource Tbl2}"/>
            <TextBox Width="200" HorizontalAlignment="Left" AcceptsReturn="True" Name="TbxF" Style="{StaticResource Tbx2}"/>

            <TextBlock Text="Логин:"  Style="{StaticResource Tbl2}"/>
            <TextBox Width="200" HorizontalAlignment="Left" AcceptsReturn="True" Name="TbxL" Style="{StaticResource Tbx2}"/>
            <TextBlock Text="Пароль"  Style="{StaticResource Tbl2}"/>
            <TextBox Width="200" HorizontalAlignment="Left" AcceptsReturn="True" Name="TbxP" Style="{StaticResource Tbx2}"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="10" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
           
            <Button  Content="Сохранить" Style="{StaticResource Btn3}" Click="Button_Click"  />
        </StackPanel>

    </Grid>
</Page>
