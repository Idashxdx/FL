<Window x:Class="FlowerSmell.Capcha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowerSmell"
        mc:Ignorable="d"
        Title="Capcha" Height="400" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFDDDFC7">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Margin="5" Name="LBtext" HorizontalContentAlignment="Center" FontSize="50" Background="#52734d" Foreground="#FFEBD5D5">
            <Label.Effect>
                <BlurEffect Radius="4" />
            </Label.Effect>
        </Label>
        <TextBox Name="TBText" Width="390" Grid.Row="1"/>
        <Button Name="NewBtn" Grid.Row="2" Content="Обновить" Click="NewBtn_Click"/>
        <Button Name="EnterBtn" Grid.Row="3" Content="Продолжить" Click="EnterBtn_Click"/>
    
    </Grid>
</Window>
